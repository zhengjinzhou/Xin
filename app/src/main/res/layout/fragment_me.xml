<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include layout="@layout/headerbar"/>

    <com.zhou.xin.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efeff4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    app:civ_border_width="@dimen/space_1"
                    app:civ_border_color="@color/colorPrimary"
                    android:id="@+id/circle"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:src="@drawable/test1" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/circle"
                    android:text="姓名"
                    android:textColor="#1e1e1e"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/circle"
                    android:src="@drawable/male" />

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="14dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="14dp"
                    android:text="编辑"
                    android:textColor="#1e1e1e" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="#efeff4" />

            <android.support.v7.widget.RecyclerView
                android:background="@drawable/bg_select"
                android:id="@+id/recycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="#efeff4" />

            <TextView
                android:drawablePadding="@dimen/space_8"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_yaoqing_normal"
                android:id="@+id/tv_invite"
                style="@style/TextStyle"
                android:text="邀请好友" />

            <TextView style="@style/LineStyle" />
            <TextView
                android:drawablePadding="@dimen/space_8"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_help_normal"
                android:id="@+id/tv_help"
                style="@style/TextStyle"
                android:text="帮助中心" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="#efeff4" />

            <TextView
                android:id="@+id/tv_exit"
                style="@style/TextStyle"
                android:text="退出登录" />
        </LinearLayout>

    </com.zhou.xin.widget.ReboundScrollView>
</LinearLayout>